{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react",
		"paths": {
			"$components/*": ["src/components/*"],
			"$styles/*": ["src/styles/*"],
			"$layouts/*": ["src/components/layouts/*"],
			"$assets/*": ["src/assets/*"],
			"$scripts/*": ["src/scripts/*"],
			"$utils/*": ["src/utils/*"],
			"$stores/*": ["src/stores/*"]
		}
	}
}
