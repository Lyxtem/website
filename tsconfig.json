{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "NodeNext",
		"jsx": "react",
		"paths": {
			"@components": ["src/components"],
			"@components/*": ["src/components/*"],
			"@styles/*": ["src/styles/*"],
			"@layouts/*": ["src/layouts/*"],
			"@assets/*": ["src/assets/*"]
		}
	}
}
