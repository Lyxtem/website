---
import UsesLayout from '$layouts/uses-layout.astro'
import UsesCard from '$components/cards/uses-card.astro'
import { getCollection } from 'astro:content'
import BaseSeo from '$components/base-seo.astro'

const tools = await getCollection('tools')

const sortedToolsAlphabetically = tools.sort((a, b) => a.data.title.localeCompare(b.data.title))
---

<UsesLayout>
	<Fragment slot="seo">
		<BaseSeo title="Uses" description="All applications used by Ashfid" type="website" />
	</Fragment>
	{sortedToolsAlphabetically.map((tool) => <UsesCard tool={tool} />)}
</UsesLayout>
