---
import { Links } from "./NavigationLinks";

const pageName = Astro.url.pathname;
---

<nav class="bg-primary-lighter px-3 py-5 rounded-md sticky flex justify-between items-center gap-4">
    <h1 class="text-4xl flex gap-4 items-center font-mono">
        <a href="/" class="text-effect">Ashfid</a>
    </h1>
    <ul class="flex gap-4 font-mono">
        {Links.map(link => 
        <li class="" aria-current={pageName === link.url ? "page" : ""}>
            <a href={link.url}  class="flex gap-2">
                <link.icon></link.icon>
                {link.name}
            </a>
        </li>
        )}
    </ul>
</nav>

<style>
    li[aria-current="page"] {
        position: relative;
    }

    li[aria-current="page"] svg {
        color: var(--color-accent);
        @apply animate-bounce;
        view-transition-name: current-page-icon;
    }

    li[aria-current="page"]::before {
        content: '';
        position: absolute;
        background-color: var(--color-accent);
        bottom: 0;
        right: 0;
        left: 0;
        height: 2px;
        view-transition-name: current-page;
    }
</style>