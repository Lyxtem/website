---
import { ViewTransitions } from 'astro:transitions'
import '@fontsource/inter'
import '@fontsource-variable/raleway'
import '@fontsource-variable/roboto-condensed'
import '$styles/globals.css'

import NavigationBar from '$components/navigation-bar/navigation-wrapper.astro'
import CommandBar from '$components/command-palette/CommandBar.astro'
import MobileNavigation from '$components/navigation-bar/mobile-navigation.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<!-- Icons -->
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- Meta Tags -->
		<meta name="generator" content={Astro.generator} />

		<slot name="seo" />
		<ViewTransitions fallback="swap" />

		<script data-astro-rerun>
			function setSettings(newDocument) {
				const element = newDocument.documentElement

				Object.keys(getSettings()).map((key) => {
					const value = getSettings()[key]

					element.dataset[key] = value
				})

				if (typeof localStorage !== undefined) {
					localStorage.setItem(
						'settings',
						JSON.stringify({
							...getSettings()
						})
					)
				}
			}

			function getSettings() {
				if (typeof localStorage !== undefined && localStorage.getItem('settings')) {
					return JSON.parse(localStorage.getItem('settings'))
				}

				const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches

				if (isDark) {
					return {
						theme: 'dark',
						rounded: 'true'
					}
				} else {
					return {
						theme: 'light',
						rounded: 'true'
					}
				}
			}

			setSettings(document)
		</script>
	</head>
	<body
		class="mx-auto mb-20 min-h-screen max-w-6xl grid-cols-sidebar-layout bg-body text-body md:mb-auto md:grid"
	>
		<NavigationBar />
		<MobileNavigation />
		<main class="flex h-full flex-grow flex-col gap-4 text-base md:border-r md:border-highlight">
			<CommandBar />
			<div class="space-y-8 px-4 pb-4 pt-4 md:px-4 md:pt-0">
				<slot />
			</div>
		</main>

		<script is:inline>
			document.addEventListener('astro:page-load', (ev) => {
				const click = new Audio('/audio/clicky.mp3')
				const allLinkElements = document.querySelectorAll('nav a[href]')

				click.addEventListener('canplaythrough', () => {
					allLinkElements.forEach((link) => {
						link.addEventListener('click', playClick)
					})
				})

				function playClick() {
					const getSoundsPreferenceFromStorage = localStorage.getItem('sounds')
					const sounds = JSON.parse(getSoundsPreferenceFromStorage)

					if (sounds) {
						click.volume = 0.5
						click.currentTime = 0
						click.play()
					}
				}
			})
		</script>

		<script>
			import { themes } from '$components/settings/themes'

			document.addEventListener('astro:before-swap', (ev) => {
				if (getSettings()) {
					setSettings(ev.newDocument)
				}
			})

			document.addEventListener('astro:page-load', () => {
				if (getSettings()) {
					const codeTheme = 'codeTheme' in getSettings()
					if (codeTheme) return
					const themesDB = themes.find((t) => t.name === getSettings().theme)
					const currentSetting = JSON.parse(localStorage.getItem('settings')!)
					localStorage.setItem(
						'settings',
						JSON.stringify({ ...currentSetting, codeTheme: themesDB?.codeTheme })
					)

					setSettings(document)
				}
			})

			function getSettings() {
				if (typeof localStorage !== undefined && localStorage.getItem('settings')) {
					return JSON.parse(localStorage.getItem('settings')!)
				}
				// const darkTheme = themes.find((t) => t.name === 'dark')
				// const lightTheme = themes.find((t) => t.name === 'light')

				// const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches

				// if (isDark) {
				// 	return {
				// 		theme: darkTheme?.name,
				// 		codeTheme: darkTheme?.codeTheme,
				// 		rounded: 'on'
				// 	}
				// } else {
				// 	return {
				// 		theme: lightTheme?.name,
				// 		codeTheme: lightTheme?.codeTheme,
				// 		rounded: 'on'
				// 	}
				// }
			}

			function setSettings(newDocument: Document) {
				const element = newDocument.documentElement

				Object.keys(getSettings()).map((key) => {
					const value = getSettings()[key]

					element.dataset[key] = value
				})

				localStorage.setItem('settings', JSON.stringify(getSettings()))
			}
		</script>
	</body>
</html>
