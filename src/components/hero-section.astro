---
interface Props {
	title: string
}

const { title = 'Title Here' } = Astro.props
---

<section
	class="space-y-2 rounded-md border-x border-b-4 border-t border-highlight bg-card p-4"
	transition:name="hero-section"
>
	<h1 class="font-heading text-xl font-extrabold tracking-wider">{title}</h1>
	<slot />
</section>
