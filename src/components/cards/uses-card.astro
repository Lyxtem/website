---
import type { CollectionEntry } from 'astro:content'
import { Icon } from 'astro-icon/components'

interface Props {
	tool: CollectionEntry<'tools'>
}

const { tool } = Astro.props
---

<a
	href={tool.data.url}
	class="cursor-pointer rounded-md border-x border-b-4 border-t border-highlight bg-card p-2 hover:border-highlight-hover"
	rel="external nofollow"
>
	<div class="flex items-center gap-4" transition:name={tool.data.title}>
		<Icon name={tool.data.icon} class="text-xl" />
		<h4 class="font-heading font-bold tracking-wide">{tool.data.title}</h4>
	</div>
</a>
