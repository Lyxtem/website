---
interface Props {
	title: string
}

const { title } = Astro.props

const highlightedTitle = title.split(' ')[0] + ' '
const restTitle = title.substring(title.indexOf(' ') + 1)
---

<h2 class="font-heading text-xl font-semibold tracking-normal">
	<span class="font-bold text-heading">
		{highlightedTitle}
	</span>
	<span>{restTitle}</span>
</h2>
